<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".juego.Juego">

    <ScrollView
        android:id="@+id/scroll_V"
        android:layout_width="331dp"
        android:layout_height="422dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:id="@+id/scroll_H"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:fadeScrollbars="false">

            <TableLayout
                android:id="@+id/table_game"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </HorizontalScrollView>
    </ScrollView>


    <Button
        android:id="@+id/BotonCompiladorGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="analisar"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/TextGameMove"
        android:layout_width="327dp"
        android:layout_height="187dp"
        android:layout_marginBottom="8dp"
        android:text="#ingresar movimientos"
        app:layout_constraintBottom_toTopOf="@+id/BotonCompiladorGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_V" />

</androidx.constraintlayout.widget.ConstraintLayout>